<div class="container-fluid pb-5 mb-5">
  <!-- Search Results Section -->
  <div class="row">
    <% if (searchResults && searchResults.length > 0) { %>
      <% searchResults.forEach(function (note) { %>
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 border-primary shadow-sm">
            <a href="/dashboard/item/<%= note._id %>" class="text-decoration-none text-dark">
              <div class="card-body">
                <h5 class="card-title text-primary fw-bold text-truncate" title="<%= note.title %>">
                  <%= note.title %>
                </h5>
                <p class="card-text text-muted text-truncate" title="<%= note.body %>">
                  <%= note.body %>
                </p>
              </div>
            </a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col text-center">
        <img
          src="/images/no-results.svg"
          alt="No items found"
          class="img-fluid mb-4"
          style="max-height: 250px"
        />
        <p class="fs-4 text-muted">No items found.</p>
        <a href="/dashboard" class="btn btn-primary">Back to Dashboard</a>
      </div>
    <% } %>
  </div>
</div>
